---
processes:
  - name: cube_sync # same as BOSH-job name means `-p <process>` is not needed
    executable: /var/vcap/packages/cube/bin/cube
    args:
    - sync
    - --ccApi
    - <%= p('cube_sync.ccAPI') %>
    - --ccUser
    - <%= p('cube_sync.ccUser') %>
    - --ccPass
    - <%= p('cube_sync.ccPassword') %>
    - --kubeconfig
    - /var/vcap/jobs/cube_sync/config/kube.yml
    - --externalCubeAddress
    - <%= p('cube_sync.registry_address') %>
    - --backend
    - <%= p('cube_sync.backend') %>
    - --adminUser
    - <%= p('cube_sync.adminUser') %>
    - --adminPass
    - <%= p('cube_sync.adminPassword') %>
    - --namespace
    - <%= p('cube_sync.kube_namespace') %>
    - --kubeEndpoint
    - <%= p('cube_sync.kube_endpoint') %>
    <% if p("cube_sync.skipSslValidation") %>- --skipSslValidation<% end %>
    limits:
      memory: 3G
      processes: 10
      open_files: 100000
    ephemeral_disk: true # mount /var/vcap/data/the_job ; default `false`
                         # NOTE: /var/vcap/data/the_job/tmp is always mounted `rw`
