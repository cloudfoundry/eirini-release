#!/bin/bash -e

run_dir=/var/vcap/sys/run/cube_route_emitter
log_dir=/var/vcap/sys/log/cube_route_emitter
conf_dir=/var/vcap/jobs/cube_route_emitter/config

pidfile=$run_dir/cube_route_emitter.pid

source /var/vcap/packages/pid_utils/pid_utils.sh

case $1 in

  start)
    pid_guard $pidfile "cube_route_emitter"

    mkdir -p $run_dir
    chown -R vcap:vcap $run_dir

    mkdir -p $log_dir
    chown -R vcap:vcap $log_dir

    # Allowed number of open file descriptors
    ulimit -n 100000

    exec chpst -u vcap:vcap /var/vcap/jobs/cube_route_emitter/bin/emitter_as_vcap

    ;;

  stop)
    kill_and_wait $pidfile

    ;;

  *)
    echo "Usage: emitter_ctl {start|stop}"

    ;;

esac
